{
  "root": true,
  "plugins": [
    "eslint-plugin",
    "i",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:eslint-plugin/recommended",
    "plugin:i/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "es2017": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": "test/src/**/*.js",
      "env": {
        "jest": true
      }
    }
  ]
}
